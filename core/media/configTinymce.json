{
	"selector": "textarea:not(.onlyText)",
	"height": 500,
	"language" : selectLang,
	"plugins": ["advlist", "autolink", "code", "charmap", "fullscreen", "lists", "link", "localautosave", "media", "image", "imagetools", "paste", "responsivefilemanager", "visualblocks"],
	"menubar": false,
	"toolbar": "styleselect | bold italic | alignleft aligncenter alignright | bullist numlist | outdent indent | image link localautosave code fullscreen",
